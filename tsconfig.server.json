    "outDir": "dist/server",
    "noEmit": false,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2020"
  },
  "include": ["src/server/**/*", "api/**/*"],
  "exclude": ["node_modules", "dist"]
} 