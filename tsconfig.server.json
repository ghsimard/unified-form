{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmit": false,
    "jsx": "react",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "rootDir": "src"
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules"]
} 